{
  "name": "mini-glimpse",
  "displayName": "MiniGlimpse",
  "description": "MiniGlimpse displays the minimap only when text is selected, providing a cleaner and more focused coding environment.",
  "version": "1.2.3",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "Tobbyte",
	"author": {
		"name": "Tobbyte"
	},
  "keywords": [
    "minimap",
    "miniglimpse",
    "minimap toggle",
    "minimap on selection",
    "minimap autohide",
    "minimap auto hide",
    "autohide",
    "auto hide",
    "hide minimap",
    "selection",
    "on select"
  ],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mini-glimpse.enableMiniGlimpse",
        "title": "enable MiniGlimpse"
      },
      {
        "command": "mini-glimpse.disableMiniGlimpse",
        "title": "disable MiniGlimpse"
      }
    ],
    "configuration": {
      "title": "MiniGlimpse",
      "properties": {
        "miniGlimpse.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable MiniGlimpse"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "icon": "./icon.png",
  "license": "MIT",
  "pricing": "Free",
  "repository": {
      "type": "git",
      "url": "https://github.com/Tobbyte/MiniGlimpse"
    }
}
